<!-- views/signin.handlebars -->

<section id="wrapper2">
  <article id="logo_login"></article>

  <section id="signinSection">
   
    <form id="local-sign-in" action="/login" method="post">
      <input type="text" name="email" placeholder="Email" required class="form-control textStyle signinInput"/>
      
      
      <input type="password" name="password" placeholder="Password" required class="form-control textStyle signinInput"/>
      
      <input type="submit" class="buttonArea" value="GO"/>
     
      
      
      
    </form>
    <div id="local">
      <a href="/local-reg" class="regBtn" role="button">Register</a>
      <a href="/forgot" class="forgotBtn" role="button">Forgot Password?</a>
    </div>


  </section>

</section>